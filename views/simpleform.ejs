<% include header %>

<form method="POST" action="<%= action %>">
    <table id="login">
	<tr><td>Username:</td>
            <!-- name attribute must be provided for non ajax forms -->
            <td><input type="text" id="username" name="username" /></td>
        </tr>
        <tr><td>Email:</td>
            <!-- name attribute must be provided for non ajax forms -->
            <td><input type="text" id="email" name="email" /></td>
        </tr>
        <tr><td>Password:</td>
            <td><input type="password" id="password" name="password" /></td>
        </tr>

         <tr><td>Make a Post:</td>
          <td><textarea name="post" id="post" cols="45" rows="5"></textarea> </td>   
       
        </tr>


    </table>
    <input type="submit">
</form>

<% include footer %>